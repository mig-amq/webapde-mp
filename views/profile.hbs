{{> header}}
<div id="content" class="ui special">
  <div class="user">
    <div class="ui grid container">
      <div class="three wide column">
        <img src="{{profile.img}}" alt="" class="ui small fluid circular image" >
      </div>
      <div class="thirteen wide column">
        <div class="details">
          <h1 class="ui header">
            {{profile.name}}
            <div class="sub header">
        
              {{#if mine}}
              <br/>
              <a href="/user/{{account._id}}/edit/" class="ui tiny button teal">
                <i class="edit icon"></i>
                Update Details
              </a>
              {{/if}}
            </div>
          </h1>
        </div>
      </div>
    </div>
  </div>
  <div id="cards"></div>
  <div class="ui hidden centered text" id="empty" style="text-align: center;">
    <span class="ui huge header">Can't find any posts! Sad lah :(</span class="header">
  </div>
  <div class="ui centered inline active text indeterminate loader" id="post-loader">
    Getting yo memes...
  </div>
</div>
{{> footer}}